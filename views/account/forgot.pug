extends ../layout

block content
  .default
    h1.offset-md-3 Forgot Your Password?
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      p.offset-md-3 No problem! Enter your email address below and we will send you password reset instructions.
      .form-group.row
          input.offset-md-3.col-md-5.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, autocomplete='email', required)
      .form-group.offset-sm-3
        button.btn.btn-primary(type='submit')
          i.fas.fa-key.fa-sm
          | Send Reset Password Email
      .form-group.offset-sm-3
        a.blue(href='/login') 
          i.fas.fa-arrow-circle-left.fa-sm
          | Back to Login
