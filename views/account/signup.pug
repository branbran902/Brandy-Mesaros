extends ../layout

block content
  .row.sign-up
    .col-md-9.text-center.first-side
      .offset-md-3.col-md-7.pl-2
        h1 Hello, Friend!
        h2 Create an account using one of the following 
      form(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
          .offset-md-3.col-md-7.pl-2
            a.btn.social-btns(href='/auth/google')
              p.fab.fa-google-plus-g.fa-xs
            a.btn.social-btns(href='/auth/facebook')
              p.fab.fa-facebook-f.fa-sm
            a.btn.social-btns(href='/auth/twitter')
              p.fab.fa-twitter.fa-sm
        .form-group
          .offset-md-4.col-md-5.pl-2
            hr
        .offset-md-3.col-md-7.pl-2
            h2 or sign up with your email:
        .form-card
          .row
            .offset-md-4.col-md-5.pl-2
              .input-group
                input(type='text', name='firstname', id='firstname', placeholder='John', autofocus, autocomplete='first name', required)
                label Firstname*
          .row
            .offset-md-4.col-md-5.pl-2
              .input-group
                input(type='text', name='lastname', id='lastname', placeholder='Smith', autocomplete='last name', required)
                label Lastname*
          .row
            .offset-md-4.col-md-5.pl-2
              .input-group
                input(type='email', name='email', id='email', placeholder='John.Smith@example.com', autofocus, autocomplete='email', required)
                label Email*
          .row
            .offset-md-4.col-md-5.pl-2
              .input-group
                input(type='password', name='password', id='password', placeholder='**********', autocomplete='current-password', required)
                label Password*
              br
          .form-group.row
            .offset-md-4.col-md-5.pl-2
              h4.text-left Birthday 
              p.text-left To sign up, you must be 18 or older. Don't worry, other people wonâ€™t see your birthday.
              input.form-control(type='date', name='birthday', id='birthday', placeholder='Birthday', autocomplete='birthday', required)
        if errors
          for error, i in errors
            p #{ errors }
        .row
          .offset-md-3.col-md-7.pl-2
            p By clicking "Create", I agree to Crewmates's Terms of Service, Privacy Policy, Guest Refund Policy, and Host Guarantee Terms.
            button.col-md-3.btn.submit(type='submit')
              | Create
    .col-md-3.text-center.other-side
      h1 Already have an account?
      br
      a.notabtn.signup(href='/login') 
        | Log In


