                    input#num4.form-control.col.verifyNum(type='text', name='num4', oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);', maxlength="1")
                    input#num5.form-control.col.verifyNum(type='text', name='num5', oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);', maxlength="1")
                    input#num6.form-control.col.verifyNum(type='text', name='num6', oninput='javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);', maxlength="1")
                   
                .form-group
