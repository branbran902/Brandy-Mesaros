extends layout

block head
  script(src='https://www.google.com/recaptcha/api.js' async='' defer='')

block content
  .contactbackground
    .contactform
      h1 Feel free to contact us!
      form(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        if (unknownUser)
          .form-group.row
              input.form-control(type='text', name='name', id='name', placeholder='Your name' autocomplete='name', autofocus, required)
          .form-group.row
              input.form-control(type='email', name='email', id='email', placeholder='Your email' autocomplete='email', required)
        .form-group.row
            textarea.form-control(name='message', id='message', rows='7', placeholder='The message' autofocus=(!unknownUser).toString(), required)
        .form-group
            .g-recaptcha(data-sitekey=sitekey)
            br
            button.btn.btn-primary(type='submit')
              i.far.fa-envelope.fa-sm
              | Send
